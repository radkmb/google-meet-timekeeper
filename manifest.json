{
	"name": "Google Meet Timer",
	"version": "1.0",
	"description": "Adds a timer to Google Meet",
	"permissions": [
		"storage",
		"notifications",
		"alarms"
	],	
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://meet.google.com/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"manifest_version": 2
}
